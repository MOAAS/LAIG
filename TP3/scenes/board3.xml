<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="25">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="-50" far="300" left="-40" right="40" top="20" bottom="-20" >
            <to x="0" y="0" z="-1" />
            <from x="0" y="0" z="1" />
            <up x="0" y="1" z="1"/> 
        </ortho>
         <perspective id="television" near="0.1" far="500" angle="70">
            <from x="-7.5" y="15" z="0" />
            <to x="2.5" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="-100" y="200" z="200" w="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="0.8" />
            <diffuse r="0.8" g="0.8" b="0.8" a="0.8" />
            <specular r="0.8" g="0.8" b="0.8" a="0.8" />
            <attenuation constant="1.0" linear="0" quadratic="0.00" />
        </omni>

        <omni id="light" enabled="0">
            <location x="0" y="20" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.02" quadratic="0.00" />
        </omni>

    </lights>

    <textures>
        <texture id="sun" file="scenes/images/sun.jpg" />
        <texture id="road" file="scenes/images/road.jpg" />
        <texture id="redfabric" file="scenes/images/redfabric.jpg" />
        <texture id="blackfabric" file="scenes/images/blackfabric.jpg" />
        <texture id="grayfabric" file="scenes/images/grayfabric.jpg" />
        <texture id="lightwood" file="scenes/images/lightwood.jpg" />
        <texture id="wood" file="scenes/images/wood.jpg" />
        <texture id="floor" file="scenes/images/floor.png" />
        <texture id="view" file="scenes/images/view.png" />
        <texture id="carpet" file="scenes/images/carpet.jpg" />
        <texture id="building" file="scenes/images/building.jpg" />
        <texture id="airplane" file="scenes/images/airplane.png" />
        <texture id="skyup" file="scenes/images/bluecloud_up.jpg" />
        <texture id="skybk" file="scenes/images/bluecloud_bk.jpg" />
        <texture id="skydn" file="scenes/images/bluecloud_dn.jpg" />
        <texture id="skyft" file="scenes/images/bluecloud_ft.jpg" />
        <texture id="skylf" file="scenes/images/bluecloud_lf.jpg" />
        <texture id="skyrt" file="scenes/images/bluecloud_rt.jpg" />
    </textures>

    <materials>
        <material id="emissor" shininess="20">
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </material>
        

        <material id="graydiff" shininess="4">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.25" g="0.25" b="0.25" a="1.0" />
            <diffuse r="0.9" g="0.9" b="0.9" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="browndiff" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.05" b="0.025" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0.1" a="1.0" />
            <specular r="0.1" g="0.05" b="0.025" a="1.0" />
        </material>

        <material id="shinyGreen" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.05" g="0.15" b="0.05" a="1.0" />
            <diffuse r="0.1" g="0.4" b="0.1" a="1.0" />
            <specular r="0.9" g="0.9" b="0.9" a="1.0" />
        </material>

        <material id="shinyGold" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="1.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.5" g="0.3" b="0.0" a="1.0" />
        </material>

        <material id="shinyRed" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.9" g="0.25" b="0.25" a="1.0" />
            <specular r="0.45" g="0.125" b="0.125" a="1.0" />
        </material>
        <material id="shinyGray" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.45" g="0.45" b="0.45" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="moontransform1">
            <translate x="2" y="2" z="2"/>
            <scale x="0.5" y="0.5" z="0.5"/>
        </transformation>
    </transformations>

    <animations>
        <animation id="jumping" maxLoops="3">
            <keyframe instant="0.25">
                <translate x="0" y="0.75" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="0.5">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="invalidmove" maxLoops="1">
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="0.8" y="0.3" z="0.8" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonpress" maxLoops="1">
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonToggleDown" maxLoops="1">
            <keyframe instant="0.0">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonToggleUp" maxLoops="1">
            <keyframe instant="0.0">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1.0" z="1" />  
            </keyframe>
        </animation>

        <animation id="cameraswitchtoP1" maxLoops="1">
            <keyframe instant="0">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="180" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>
        <animation id="cameraswitchtoP2" maxLoops="1">
            <keyframe instant="0">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="180" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        
    </animations>

    <primitives>
        <primitive id="plane1"><plane npartsU="64" npartsV="64"/></primitive>
        <primitive id="sphere1"><sphere slices="50" stacks="50" radius="0.5"/></primitive>
        <primitive id="shortCylinder"><cylinder base="0.5" top="0.5" height="0.25" slices="20" stacks="20"/></primitive>
        <primitive id="cylinder"><cylinder base="1" top="1" height="1" slices="20" stacks="20"/></primitive>
        <primitive id="hexprism"><prism parts="6"/></primitive>
        <primitive id="prism4"><prism parts="4"/></primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation/>
            <material id="graydiff" />
            <texture id="none"/>
            <children> 
                <componentref id="skybox"/>
                <componentref id="board"/>

              <!--  <componentref id="vericoolhexprism"/> -->
            </children>
        </component>
        


        <component id="skybox">
            <transformation>
                <translate x="0" y="100" z="0"/>
                <scale x="500" y="500" z="500"/>
            </transformation>
            <material id="emissor" />
            <texture id="none"/>
            <children>
                <componentref id="skyboxtop"/>
                <componentref id="skyboxbot"/>
                <componentref id="skyboxleft"/>
                <componentref id="skyboxright"/>
                <componentref id="skyboxfront"/>
                <componentref id="skyboxback"/>
            </children>
        </component>

        <component id="skyboxtop">
            <transformation>
                <translate x="0" y="0.5" z="0"/>
                <rotate axis="z" angle="180"/>
            </transformation>
             <material id="inherit" />
            <texture id="skyup"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="skyboxbot">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
            </transformation>
             <material id="inherit" />
            <texture id="skydn"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="skyboxleft">
            <transformation>
                <translate x="-0.5" y="0" z="0"/>
                <rotate axis="z" angle="-90"/>
            </transformation>
             <material id="inherit" />
            <texture id="skyrt"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="skyboxright">
            <transformation>
                <translate x="0.5" y="0" z="0"/>
                <rotate axis="z" angle="90"/>
            </transformation>
             <material id="inherit" />
            <texture id="skylf"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="skyboxfront">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
             <material id="inherit" />
            <texture id="skyft"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="skyboxback">
            <transformation>
                <translate x="0" y="0" z="-0.5"/>
                <rotate axis="x" angle="90"/>
            </transformation>
             <material id="inherit" />
            <texture id="skybk"/>
            <children>
                <primitiveref id="plane1"/>
            </children>
        </component>

        
        <component id="vericoolhexprism">
            <transformation>
                <scale x="3" y="3" z="3"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="hexprism"/>
            </children>
        </component>

        <component id="board">
            <transformation>
                <translate x="0" y="0.01" z="0"/>
                <scale x="25" y="1" z="25"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="genericbutton">
            <transformation>
                <scale x="1" y="0.3" z="1"/>
                <rotate axis="y" angle="45"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="prism4"/>
            </children>
        </component>




        <component id="piece1">
            <transformation>
                <translate x="0" y="0.1" z="0"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.065" y="0.065" z="0.1"/></transformation>
            <material id="shinyGreen"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="suitcase"/>
            </children>
        </component>

        <component id="piece2">
            <transformation>
                <translate x="0" y="0.1" z="0"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.065" y="0.065" z="0.1"/>
            </transformation>
            <material id="shinyGold"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="suitcase"/>
            </children>
        </component>
        <component id="piece3">
            <transformation>
                <translate x="0" y="0.1" z="0"/>
                <rotate axis="x" angle="-90"/>
                <scale x="0.065" y="0.065" z="0.1"/>
            </transformation>
            <material id="shinyRed"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="suitcase"/>
            </children>
        </component>
    </components>
</lxs>