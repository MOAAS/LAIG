<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="25">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="-50" far="300" left="-40" right="40" top="20" bottom="-20" >
            <to x="0" y="0" z="-1" />
            <from x="0" y="0" z="1" />
            <up x="0" y="1" z="1"/> 
        </ortho>
         <perspective id="television" near="0.1" far="500" angle="70">
            <from x="-7.5" y="15" z="0" />
            <to x="2.5" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="-100" y="200" z="200" w="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="0.8" />
            <diffuse r="0.8" g="0.8" b="0.8" a="0.8" />
            <specular r="0.8" g="0.8" b="0.8" a="0.8" />
            <attenuation constant="1.0" linear="0" quadratic="0.00" />
        </omni>

        <omni id="light" enabled="0">
            <location x="0" y="20" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.02" quadratic="0.00" />
        </omni>

    </lights>

    <textures>
        <texture id="sun" file="scenes/images/sun.jpg" />
        <texture id="road" file="scenes/images/road.jpg" />
        <texture id="redfabric" file="scenes/images/redfabric.jpg" />
        <texture id="blackfabric" file="scenes/images/blackfabric.jpg" />
        <texture id="grayfabric" file="scenes/images/grayfabric.jpg" />
        <texture id="lightwood" file="scenes/images/lightwood.jpg" />
        <texture id="wood" file="scenes/images/wood.jpg" />
        <texture id="floor" file="scenes/images/floor.png" />
        <texture id="view" file="scenes/images/view.png" />
        <texture id="carpet" file="scenes/images/carpet.jpg" />
        <texture id="building" file="scenes/images/building.jpg" />
        <texture id="airplane" file="scenes/images/airplane.png" />
        <texture id="skyup" file="scenes/images/bluecloud_up.jpg" />
        <texture id="skybk" file="scenes/images/bluecloud_bk.jpg" />
        <texture id="skydn" file="scenes/images/bluecloud_dn.jpg" />
        <texture id="skyft" file="scenes/images/bluecloud_ft.jpg" />
        <texture id="skylf" file="scenes/images/bluecloud_lf.jpg" />
        <texture id="skyrt" file="scenes/images/bluecloud_rt.jpg" />
    </textures>

