<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="25">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="-50" far="300" left="-40" right="40" top="20" bottom="-20" >
            <to x="0" y="0" z="-1" />
            <from x="0" y="0" z="1" />
            <up x="0" y="1" z="1"/> 
        </ortho>
         <perspective id="television" near="0.1" far="500" angle="70">
            <from x="-7.5" y="15" z="0" />
            <to x="2.5" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="-5" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.1" quadratic="0.00" />
        </omni>

        <omni id="light" enabled="1">
            <location x="0" y="10" z="0" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.1" quadratic="0.00" />
        </omni>

    </lights>

    <textures>
        <texture id="sun" file="scenes/images/sun.jpg" />
    </textures>

    <materials>
        <material id="graydiff" shininess="4">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.25" g="0.25" b="0.25" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="browndiff" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.05" b="0.025" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0.1" a="1.0" />
            <specular r="0.1" g="0.05" b="0.025" a="1.0" />
        </material>

        <material id="shinyGreen" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.05" g="0.15" b="0.05" a="1.0" />
            <diffuse r="0.1" g="0.4" b="0.1" a="1.0" />
            <specular r="0.9" g="0.9" b="0.9" a="1.0" />
        </material>

        <material id="shinyGold" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="1.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.5" g="0.3" b="0.0" a="1.0" />
        </material>

        <material id="shinyRed" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.9" g="0.25" b="0.25" a="1.0" />
            <specular r="0.45" g="0.125" b="0.125" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="moontransform1">
            <translate x="2" y="2" z="2"/>
            <scale x="0.5" y="0.5" z="0.5"/>
        </transformation>
    </transformations>

    <animations>
        <animation id="jumping" maxLoops="3">
            <keyframe instant="0.25">
                <translate x="0" y="0.75" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="0.5">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="invalidmove" maxLoops="1">
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="0.8" y="0.3" z="0.8" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonpress" maxLoops="1">
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonToggleDown" maxLoops="1">
            <keyframe instant="0.0">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
        </animation>

        <animation id="buttonToggleUp" maxLoops="1">
            <keyframe instant="0.0">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="0.2" z="1" />  
            </keyframe>
            <keyframe instant="0.2">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1.0" z="1" />  
            </keyframe>
        </animation>

        <animation id="cameraswitchtoP1" maxLoops="1">
            <keyframe instant="0">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="180" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>
        <animation id="cameraswitchtoP2" maxLoops="1">
            <keyframe instant="0">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="180" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
            <keyframe instant="1">
                <translate x="0" y="0.0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />  
            </keyframe>
        </animation>

        
    </animations>

    <primitives>
        <primitive id="plane1"><plane npartsU="60" npartsV="40"/></primitive>
        <primitive id="sphere1"><sphere slices="50" stacks="50" radius="0.5"/></primitive>
        <primitive id="shortCylinder"><cylinder base="0.5" top="0.5" height="0.25" slices="20" stacks="20"/></primitive>
        <primitive id="cylinder"><cylinder base="1" top="1" height="1" slices="20" stacks="20"/></primitive>
        <primitive id="hexprism"><prism parts="6"/></primitive>
        <primitive id="prism4"><prism parts="4"/></primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation/>
            <material id="graydiff" />
            <texture id="none"/>
            <children> 
                <componentref id="board"/>
                <componentref id="tv"/>
              <!--  <componentref id="vericoolhexprism"/> -->
            </children>
        </component>

        <component id="vericoolhexprism">
            <transformation>
                <scale x="3" y="3" z="3"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="hexprism"/>
            </children>
        </component>

        <component id="board">
            <transformation>
                <scale x="25" y="1" z="25"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="genericbutton">
            <transformation>
                <scale x="1" y="0.3" z="1"/>
                <rotate axis="y" angle="45"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="prism4"/>
            </children>
        </component>


        <component id="tv">
            <transformation>
                <translate x="-10" y="5" z="0"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <componentref id="tvpole"/>
                <componentref id="tvhead"/>
            </children>
        </component>

        <component id="tvhead">
            <transformation>
                <scale x="0.2" y="5" z="8"/>
            </transformation>
            <material id="inherit"/>
            <texture id="none"/>
            <children> 
                <componentref id="tvframe"/>
                <componentref id="tvscreen"/>
            </children>
        </component>

        <component id="tvframe">
            <transformation>
                <scale x="1" y="1" z="0.85"/>
                <rotate axis="y" angle="45"/>
            </transformation>
            <material id="inherit"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="prism4"/>
            </children>
        </component>

        <component id="tvscreen">
            <transformation>
                <translate x="0.75" y="0.5" z="0"/>
                <rotate axis="x" angle="-90"/>
                <rotate axis="z" angle="-90"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="tvpole">
            <transformation>
                <translate x="-0.2" y="-5.0" z="0"/>
                <scale x="0.2" y="7.5" z="0.2"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="cylinder"/>
            </children>
        </component>


        <component id="piece1">
            <transformation><rotate axis="x" angle="-90"/></transformation>
            <material id="shinyGreen"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="shortCylinder"/>
            </children>
        </component>

        <component id="piece2">
            <transformation><rotate axis="x" angle="-90"/></transformation>
            <material id="shinyGold"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="shortCylinder"/>
            </children>
        </component>
        <component id="piece3">
            <transformation><rotate axis="x" angle="-90"/></transformation>
            <material id="shinyRed"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="shortCylinder"/>
            </children>
        </component>
    </components>
</lxs>