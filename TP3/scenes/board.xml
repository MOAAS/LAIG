<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="25">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="-50" far="300" left="-40" right="40" top="20" bottom="-20" >
            <to x="0" y="0" z="-1" />
            <from x="0" y="0" z="1" />
            <up x="0" y="1" z="1"/> 
        </ortho>
     <perspective id="television" near="0.1" far="500" angle="70">
            <from x="-0.1" y="0" z="0" />
            <to x="-15" y="2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="-5" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.1" quadratic="0.00" />
        </omni>

        <omni id="light" enabled="1">
            <location x="0" y="10" z="0" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.1" quadratic="0.00" />
        </omni>

    </lights>

    <textures>
        <texture id="sun" file="scenes/images/sun.jpg" />
    </textures>

    <materials>
        <material id="graydiff" shininess="4">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.25" g="0.25" b="0.25" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="browndiff" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.05" b="0.025" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0.1" a="1.0" />
            <specular r="0.1" g="0.05" b="0.025" a="1.0" />
        </material>

        <material id="shinyGreen" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.05" g="0.15" b="0.05" a="1.0" />
            <diffuse r="0.1" g="0.4" b="0.1" a="1.0" />
            <specular r="0.9" g="0.9" b="0.9" a="1.0" />
        </material>

        <material id="shinyGold" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="1.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.5" g="0.3" b="0.0" a="1.0" />
        </material>

        <material id="shinyRed" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.9" g="0.25" b="0.25" a="1.0" />
            <specular r="0.45" g="0.125" b="0.125" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="moontransform1">
            <translate x="2" y="2" z="2"/>
            <scale x="0.5" y="0.5" z="0.5"/>
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="plane1"><plane npartsU="60" npartsV="40"/></primitive>
        <primitive id="sphere1"><sphere slices="50" stacks="50" radius="0.5"/></primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation/>
            <material id="graydiff" />
            <texture id="none"/>
            <children> 
                <componentref id="component1"/>
            </children>
        </component>

        <component id="component1">
            <transformation>
                <scale x="20" y="1" z="20"/>
            </transformation>
            <material id="inherit" />
            <texture id="none"/>
            <children> 
                <primitiveref id="plane1"/>
            </children>
        </component>

        <component id="piece1">
            <transformation/>
            <material id="shinyGreen"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="sphere1"/>
            </children>
        </component>

        <component id="piece2">
            <transformation/>
            <material id="shinyGold"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="sphere1"/>
            </children>
        </component>
        <component id="piece3">
            <transformation/>
            <material id="shinyRed"/>
            <texture id="none"/>
            <children> 
                <primitiveref id="sphere1"/>
            </children>
        </component>
    </components>
</lxs>