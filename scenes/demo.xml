<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <to x="0" y="-2" z="0" />
            <from x="30" y="15" z="30" />
        </perspective>
        <ortho id="orthoCamera" near="0.1" far="200" left="45" right="-70" top="90" bottom="-80" >
            <up x="0" y="1" z="1"/> 
            <to x="0" y="0" z="-1" />
            <from x="0" y="0" z="1" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="5" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.1" quadratic="0.01" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="texture2" file="scenes/images/leaves.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="material2" shininess="20">
            <specular r="0.2" g="0.5" b="0.6" a="0.4" />
            <emission r="0.0" g="0.1" b="0.0" a="1.0" />
            <diffuse r="0.8" g="0.3" b="0.1" a="0.6" />
            <ambient r="0.0" g="0.2" b="0.3" a="0.8" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="0.2" y="1" z="1"/>
            <rotate angle="-45" axis="x"/>
            <scale x="1" y="2" z="1"/>
            <translate x="2" y="0" z="1" />
            <scale x="4" y="1" z="1"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <transformationref id="demoTransform"/>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
                <material id="inherit" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
    </components>
</lxs>